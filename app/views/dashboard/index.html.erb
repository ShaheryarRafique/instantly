<div>
    <h1><%= current_user.name %></h1>
    <%= button_to "Sign out",
                  destroy_user_session_path,
                  method: :delete,
                  class: "btn btn--dark" %>
</div>

<div>
    <h2>My Emails</h2>
    <ul>
        <% current_user.emails.to_a.each do |email| %>
            <li>
                <%= email.body %>
                <hr>
            </li>
        <%end%>
    </ul>
</div>
